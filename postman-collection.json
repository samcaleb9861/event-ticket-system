              "path": ["events"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "upcoming",
                  "value": "true",
                  "disabled": true
                },
                {
                  "key": "search",
                  "value": "conference",
                  "disabled": true
                }
